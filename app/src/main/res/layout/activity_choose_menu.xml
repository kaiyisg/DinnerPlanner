<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_menu_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.kth.csc.iprog.dinnerplanner.android.ChooseMenuActivity"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/choose_menu_bg_view"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/choose_menu_bg_view_id" />


    <include
        android:id="@+id/starter_choosing_dishes_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/choosing_dishes_view" />

    <include
        android:id="@+id/main_choosing_dishes_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/choosing_dishes_view" />
    <include
        android:id="@+id/dessert_choosing_dishes_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/choosing_dishes_view"
        />

</LinearLayout>
